{
  "compilerOptions": {
    "alwaysStrict": true,
    "strict": true,
    "allowJs": true,
    "checkJs": true,
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "preserveConstEnums": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "declarationMap": true,
    "outDir": "./build",
    "module": "ES2022",
    "target": "ES2022",
    "declaration": true,
    "baseUrl": ".",
    "paths": {
      "@src/*": [
        "src/main/*"
      ],
      "@test_src/*": [
        "src/test/*"
      ],
      "@mock_src/*": [
        "src/mock/*"
      ]
    },
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}